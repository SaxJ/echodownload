{
  "name": "EchoDownload",
  "version": "%VERSION%",
  "minimum_chrome_version": "20",
  "manifest_version": 2,
  "description": "Download all Echo360 recordings",
  "permissions": [
      "webRequest",
      "*://*/ecp/api/*",
      "*://*/ess/client/api/*"
  ],
  "icons": {
    "16" : "/asset/icon16.png",
    "32" : "/asset/icon32.png",
    "48" : "/asset/icon48.png",
    "128" : "/asset/icon128.png",
    "256" : "/asset/icon256.png"
  },
  "page_action": {
    "default_icon": {
      "19": "/asset/icon19.png",
      "38": "/asset/icon38.png"
    },
    "default_title": "EchoDownload is active"
  },
  "content_scripts": [
    {
      "matches": ["*://*/ecp/html/*", "*://*/ess/html/*"],
      "css": ["asset/banner_style.css"],
      "js": [
        "lib/jquery/jquery.js",
        "lib/momentjs/moment.js",
        "browserComms.min.js",
        "content.min.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
      "scripts": [
        "browserComms.min.js",
        "background.min.js"
      ]
  }
}
