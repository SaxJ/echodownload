{
  "name": "EchoDownload",
  "version": "2.2",
  "minimum_chrome_version": "20",
  "manifest_version": 2,
  "description": "Download all Echo360 lecture recordings",
  "permissions": ["webRequest", "http://prod.lcs.uwa.edu.au/ecp/api/*"],
  "icons": {
    "16" : "/icons/icon16.png",
    "32" : "/icons/icon32.png",
    "48" : "/icons/icon48.png",
    "128" : "/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://prod.lcs.uwa.edu.au/ecp/section/*"],
      "js": ["content.js"],
      "all_frames": true
    },
    {
      "matches": ["http://prod.lcs.uwa.edu.au/ecp/html/*"],
      "js": ["contentEchoCenter.js"],
      "all_frames": true
    }
  ],
  "background": {
      "scripts": ["backgroundEchoCenter.js"]
    }
}
