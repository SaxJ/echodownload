{
  "name": "EchoDownload",
  "version": "4.1",
  "minimum_chrome_version": "20",
  "manifest_version": 2,
  "description": "Download all Echo360 recordings",
  "permissions": [
      "webRequest", 
      "*://*/ecp/api/*", 
      "*://*/ess/client/api/*"
  ],
  "icons": {
    "16" : "/icons/icon16.png",
    "32" : "/icons/icon32.png",
    "48" : "/icons/icon48.png",
    "128" : "/icons/icon128.png",
    "256" : "/icons/icon256.png"
  },
  "page_action": {
    "default_icon": {        
      "19": "/icons/icon19.png",         
      "38": "/icons/icon38.png" 
    },
    "default_title": "EchoDownload is active"
  },
  "content_scripts": [
    {
      "matches": ["*://*/ecp/html/*", "*://*/ess/html/*"],
      "js": [
        "logs.js",
        "jquery-1.11.0.js",
        "moment.min.js",
        "contentEchoCenter.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
      "scripts": ["backgroundEchoCenter.js"]
    }
}
